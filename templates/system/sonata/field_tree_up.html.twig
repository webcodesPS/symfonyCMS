{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field %}
    {% spaceless %}
        {% if object.parent.children[0].id != object.id %}
            <a class="btn btn-sm btn-default" href="{{ admin.generateObjectUrl('up', object) }}" title="Move up">
                <i class="fa fa-angle-up"></i>
            </a>
        {% endif %}
    {% endspaceless %}
{% endblock %}