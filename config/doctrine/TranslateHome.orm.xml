<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping">
    <entity repository-class="App\Repository\TranslateHomeRepository" name="App\Entity\TranslateHome" table="translate__home">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <many-to-one field="home" target-entity="App\Entity\Home" inversed-by="translates">
            <join-column name="home_id" referenced-column-name="id" nullable="true" />
        </many-to-one>

        <field name="locale" type="string" column="locale" length="2" nullable="true"/>

        <field name="position" type="integer" nullable="true">
            <gedmo:sortable-position/>
        </field>

        <field name="name" type="string" column="name" length="64" nullable="true"/>

        <field name="translate" type="text" column="translate" nullable="true"/>

    </entity>
</doctrine-mapping>